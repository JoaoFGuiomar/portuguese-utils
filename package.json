{
  "name": "portuguese-utils",
  "version": "0.0.2",
  "description": "A set of usefull utils for developing Portuguese Web Applications",
  "main": "index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "babel src --out-dir . --ignore **/__tests__  && cp -r src/types ./types ",
    "prepublish": "NODE_ENV=production npm run build",
    "watch": "rm -rf dist/ && babel -w src --out-dir dist --ignore **/__tests__",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hugo-fonseca/portuguese-utils"
  },
  "author": "Hugo Fonseca <imhugofonseca@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "cpx": "^1.5.0",
    "jest": "^22.4.3",
    "versionist": "^2.13.0"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
